<core:FragmentDefinition
    xmlns="sap.m"
    xmlns:core="sap.ui.core"
>
    <Dialog
        id="helpDialog"
        title="Выбор ответственного"
    >
        <content>
            <List
                selectionChange=".onItemSelect"
                mode="SingleSelectMaster"
            >
                <items>
                    <StandardListItem title="Ответственный 1" />
                    <StandardListItem title="Ответственный 2" />
                    <StandardListItem title="Ответственный 3" />
                </items>
            </List>
        </content>
        <beginButton>
            <Button
                text="Закрыть"
                press=".onCloseDialog"
            />
        </beginButton>
    </Dialog>
</core:FragmentDefinition>
