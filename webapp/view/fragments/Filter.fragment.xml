<core:FragmentDefinition
    xmlns="sap.m"
    xmlns:core="sap.ui.core"
>
    <Panel
        headerText="Фильтр"
        class="sapUiResponsiveMargin"
        width="auto"
    >
        <content>
            <HBox class="sapUiSmallMargin sapMFlexBoxJustifySpaceBetween">
                <Select
                    id="typeSelect"
                    selectedKey="{data>/taskType}"
                >
                    <items>
                        <core:Item
                            key="0"
                            text="All"
                        />
                        <core:Item
                            key="1"
                            text="Тип 1"
                        />
                        <core:Item
                            key="2"
                            text="Тип 2"
                        />
                        <core:Item
                            key="3"
                            text="Тип 3"
                        />
                        <core:Item
                            key="4"
                            text="Тип 4"
                        />
                    </items>
                </Select>
                <HBox>
                    <Input
                        id="inputField"
                        placeholder="Ответственный"
                        value="{data>/responsible}"
                    />
                    <Button
                        id="helpDialogButton"
                        class="dialogButton"
                        text="?"
                        press=".onOpenDialog"
                    />
                </HBox>
                <Input
                    id="startDate"
                    placeholder="Дата постановки задачи"
                    value="{data>/startDate}"
                    liveChange=".onDateChange"
                />
                <Input
                    id="endDate"
                    placeholder="Дата окончания"
                    value="{data>/endDate}"
                    liveChange=".onDateChange"
                />
                <Button
                    text="Очистить"
                    press=".onClearFields"
                />
                <Button
                    text="Применить"
                    press=".onApplyFilter"
                />
                <Button
                    text="Сбросить"
                    press=".onRefresh"
                />
            </HBox>
        </content>
    </Panel>
</core:FragmentDefinition>
