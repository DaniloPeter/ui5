<core:FragmentDefinition
    xmlns="sap.m"
    xmlns:core="sap.ui.core"
>
    <Dialog
        id="responsibleDialog"
        title="Выбор ответственного2"
    >
        <content>
            <List
                selectionChange=".onResponsibleSelect"
                mode="SingleSelectMaster"
                items="{responsible>/Responsible}"
            >
                <items>
                    <ObjectListItem title="{responsible>name}" />
                </items>
            </List>
        </content>
        <beginButton>
            <Button
                text="Закрыть"
                press=".onResponsibleCloseDialog"
            />
        </beginButton>
    </Dialog>
</core:FragmentDefinition>