<mvc:View
    controllerName="ui5.testapp.controller.App"
    xmlns="sap.m"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:core="sap.ui.core"
    displayBlock="true"
>
    <Shell>
        <App>
            <pages>
                <Page>
                    <content>
                        <core:Fragment id="Filter"
                            fragmentName="ui5.testapp.view.fragments.Filter" type="XML" />
                        <core:Fragment id="TaskList"
                            fragmentName="ui5.testapp.view.fragments.TaskList" type="XML" />
                    </content>
                    <footer>
                        <Toolbar>
                            <mvc:XMLView
                                viewName="ui5.testapp.view.Footer"
                                id="Footer"
                            />
                        </Toolbar>
                    </footer>
                </Page>
            </pages>
        </App>
    </Shell>
</mvc:View>