<mvc:View
    controllerName="ui5.testapp.controller.App"
    xmlns="sap.m"
    xmlns:mvc="sap.ui.core.mvc"
>
    <Button
        text="Say Hello"
        press=".onHelloPressed"
    />
    <Text text="Hello " />
    <Input
        value="{task>/data/name}"
        description="Hello {task>/data/name}"
        valueLiveUpdate="true"
        width="60%"
        editable="{task>/editMode}"
    />
    <Button
        text="edit mode"
        press=".onEditMode"
    />
</mvc:View>
