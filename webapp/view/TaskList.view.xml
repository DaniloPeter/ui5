<mvc:View
    xmlns="sap.m"
    xmlns:core="sap.ui.core"
    xmlns:mvc="sap.ui.core.mvc"
>
    <Table
        id="taskList"
        width="auto"
        items="{task>/Tasks}"
    >
        <headerToolbar>
            <Toolbar>
                <Title text="Задачи" />
                <ToolbarSpacer />
                <Button
                    icon="sap-icon://add"
                    id="addDataButton"
                    press=".onAddData"
                    enabled="{= ${data>/editMode}}"
                />
                <Button
                    icon="sap-icon://action-settings"
                    id="settingsButton"
                    press=".onSettings"
                    enabled="{= !${data>/editMode}}"
                />
            </Toolbar>
        </headerToolbar>
        <columns>
            <Column>
                <Text text="Название Задачи" />
            </Column>
            <Column>
                <Text text="Тип Задачи" />
            </Column>
            <Column>
                <Text text="Ответственный" />
            </Column>
            <Column>
                <Text text="Дата Начала" />
            </Column>
            <Column>
                <Text text="Дата Завершения" />
            </Column>
        </columns>
        <items>
            <ColumnListItem>
                <cells>
                    <Input
                        editable="{= ${data>/editMode} }"
                        value="{task>taskName}" />
                    <Select
                        id="taskType"
                        selectedKey="{task>taskType}"
                        change=".onTaskTypeChange"
                        editable="{= ${data>/editMode} }">
                        <items>
                            <core:Item key="Тип 1" text="Тип 1" />
                            <core:Item key="Тип 2" text="Тип 2" />
                            <core:Item key="Тип 3" text="Тип 3" />
                            <core:Item key="Тип 4" text="Тип 4" />
                        </items>
                    </Select>
                    <HBox>
                        <Input
                            value="{task>responsible}"
                            change=".onResponsibleChange"
                            editable="{= ${data>/editMode} }"
                        />
                        <Button text="?" press=".onOpenResponsibleDialog"
                            enabled="{= ${data>/editMode} }" />
                    </HBox>
                    <Input
                        value="{task>startDate}"
                        change=".onStartDateChange"
                        editable="{= ${data>/editMode} }"
                        liveChange=".onDateChange" />
                    <Input
                        value="{task>endDate}"
                        change=".onEndDateChange"
                        editable="{= ${data>/editMode} }"
                        liveChange=".onDateChange" />
                </cells>
            </ColumnListItem>
        </items>
    </Table>
</mvc:View>