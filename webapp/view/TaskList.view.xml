<mvc:View
    xmlns="sap.m"
    xmlns:core="sap.ui.core"
    xmlns:mvc="sap.ui.core.mvc"
>
    <Table
        id="taskList"
        width="auto"
        items="{task>/Tasks}"
    >
        <headerToolbar>
            <Toolbar>
                <Title text="Задачи" />
                <ToolbarSpacer />
                <Button
                    icon="sap-icon://add"
                    id="addDataButton"
                    press=".onAddData"
                    enabled="{= ${data>/editMode}}"
                />
                <Button
                    icon="sap-icon://action-settings"
                    id="settingsButton"
                    press=".onSettings"
                    enabled="{= !${data>/editMode}}"
                />
            </Toolbar>
        </headerToolbar>
        <columns>
            <Column>
                <Text text="Название Задачи" />
            </Column>
            <Column>
                <Text text="Тип Задачи" />
            </Column>
            <Column>
                <Text text="Ответственный" />
            </Column>
            <Column>
                <Text text="Дата Начала" />
            </Column>
            <Column>
                <Text text="Дата Завершения" />
            </Column>
        </columns>
        <items>
            <ColumnListItem>
                <cells>
                    <Input
                        value="{task>/taskName}" />
                </cells>
            </ColumnListItem>
        </items>
    </Table>
</mvc:View>